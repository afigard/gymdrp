---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroText from '../components/HeroText.astro';
---
<BaseLayout>
  <HeroText 
    beforeGradText="The"
    gradient="122.25deg, #ffb963 12.16%, #ff4c4c 90.98%"
    gradientText="all-in-one"
    content="Get access to all the latest releases in the fitness industry. Never miss a drop again."
    afterGradText="website about gym brands"
    buttonText="Check out Calendar™"
    buttonLink="/calendar"
  />
  <HeroText 
    beforeGradText="An"
    gradient="122.25deg, #d0ff63 12.16%, #5bff4c 90.98%"
    gradientText="extensive"
    content="From apparel to supplements, from vintage to ultramodern, there's something for everyone."
    afterGradText="range of brands"
    buttonText="Browse Explorer™"
    buttonLink="/explorer"
  />
  <HeroText 
    beforeGradText="Built on"
    gradient="122.25deg, #ff63b4 12.16%, #e14cff 90.98%"
    gradientText="community"
    content="Feel free to send any feedback, report any issue, or give support if you can."
    afterGradText=""
    buttonText="Connect with us on Instagram"
    buttonLink="https://www.instagram.com/gymdrp/"
  />
</BaseLayout>
